@{
  Layout = "_Layout";
}

@using SillyStringzFactory.Models;


<ul class="nav nav-pills">
    <li><a href="#engineers" data-toggle="tab" autofocus>Engineers</a></li>
    <li><a href="#machines" data-toggle="tab">Machines</a></li>
</ul>

<div id='content' class="tab-content">
    <div class="tab-pane active" id="engineers">
        <ul>
            @foreach(Engineer eng in ViewBag.Eng)
            {
              <h4>@eng.Name</h4>
              <p>@Html.ActionLink("Details", "Details", "Engineers", new {id = eng.EngineerId}, new {@class="btn btn-info"})</p>
              <p>@Html.ActionLink("Delete Engineer", "Delete", "Engineers", new {id = eng.EngineerId}, new {@class="btn btn-warning"})</p>
            }
        </ul>
        <p>@Html.ActionLink("Add Engineer", "Create", "Engineers", null, new {@class="btn btn-success"})</p>
        
    </div>
    <div class="tab-pane" id="machines">
        <ul>
            @foreach(Machine mac in ViewBag.Mac)
            {
              <h4>@mac.Name</h4>
              <p>@Html.ActionLink("Details", "Details", "Machines", new { id = mac.MachineId }, new {@class="btn btn-info"})</p>
              <p>@Html.ActionLink("Delete Machine", "Delete", "Machines", new {id = mac.MachineId}, new {@class="btn btn-warning"})</p>
            }
        </ul>
        <p>@Html.ActionLink("Add Machine", "Create", "Machines", null, new {@class="btn btn-success"})</p>
    </div>
</div>
